<h2><%= t '.header' %></h2>

<h4>Here you can view your villas. Currently their number is <%= @villas.count %>.</h4>

<table class="table table-striped table-condensed">
  <tr>
    <th><%= t '.name' %></th>
    <th><%= t '.points' %></th>
    <th><%= t '.show_on_map' %></th>
  </tr>
  <% @villas.each do |v| %>
    <tr>
      <td><%= link_to v.name, villa_url(v) %></td>
      <td><%= v.points %></td>
      <td><%= link_to coordinates(v), map_url(x: v.x, y: v.y) %></td>
    </tr>
  <% end %>
</table>
