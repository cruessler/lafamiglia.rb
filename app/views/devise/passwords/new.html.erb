<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                    html: { method: :post, class: 'form-account' }) do |f| %>
  <h2>Forgot your password?</h2>

  <%= f.error_notification %>

  <%= f.input :email, required: true, autofocus: true %>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Send me reset password instructions</button>

  <%= render "devise/shared/links" %>
<% end %>
