<%= message_form_for @message,
                    wrapper: :vertical_form,
                    html: { class: 'form-vertical' } do |f| %>
  <%= f.error_notification %>

  <%= f.players :receivers %>
  <%= f.input :text %>

  <div class="form-actions">
    <%= f.button :submit, t('.create'), class: 'btn-primary' %>
  </div>
<% end %>
