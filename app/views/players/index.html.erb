<h2><%= t '.header' %></h2>

<h4>Currently the number of players is <%= Player.count %>.</h4>

<table class="table table-striped table-condensed">
  <tr>
    <th><%= t '.position' %></th>
    <th><%= t '.name' %></th>
    <th><%= t '.villas' %></th>
    <th><%= t '.points' %></th>
  </tr>
  <% @players.each do |p| %>
    <tr>
      <td><%= @start_position += 1 %></td>
      <td><%= p.name %></td>
      <td><%= p.villas.count %></td>
      <td><%= p.points %></td>
    </tr>
  <% end %>
</table>

<%= paginate @players %>
